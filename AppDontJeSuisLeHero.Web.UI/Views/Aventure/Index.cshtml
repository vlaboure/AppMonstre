@using Appdontjesuislehero.Core.Data.Models
@model List<Aventure>
@{
    ViewData["Title"] = "Aventure Page";
   
}

<h1 class="text-center">@ViewBag.MonTitre</h1>
<div class="row justify-content-center">
    <a class="btn btn-primary btn-lg active row justify-content-center" asp-controller="Aventure" asp-action="Create">Nouvelle aventure</a>
</div>

<h2 class="text-center small">Découvrons vos dernières aventures</h2>

<div class="row">
    @foreach (var aventure in Model)
    {
        <a href="#" class="card border m-2 text-center" style="width: 7rem;">
            <div class="card-body">
                @aventure.Titre
            </div>
        </a>
    }
</div>